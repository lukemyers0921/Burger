<div class="container">
  <div class = "row">
    <div class = "col-md-12">
      <img src = "/assets/img/burger.png">
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <ol>
        {{#each burgers}} {{#unless devoured}}
        <li>
          {{name}}
          <button class="change-devour btn btn-success" data-id="{{id}}" data-newDevour="{{devour}}">
            Devour!
          </button>
        </li>
        {{/unless}} {{/each}}
      </ol>
    </div>
    <div class="col-md-6">
      <ol>
        {{#each burgers}} {{#if devoured}}
        <li>
          {{name}}
        </li>
        {{/if}} {{/each}}
      </ol>

    </div>
  </div>
  <div class="row">
    <div class = "col-md-12">
    <form class="create-form">
      <div class="form-group">
        <input id="ca" name="name"></input><br>
        <label for="ca">Enter a burger you want to eat Click the "Submit" button.</label>
      </div>
      <button type="submit" class="btn btn-success">Submit</button>
    </form>
  </div>
  </div>
</div>